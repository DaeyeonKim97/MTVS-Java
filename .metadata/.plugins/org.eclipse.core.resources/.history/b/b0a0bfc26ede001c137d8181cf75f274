package part2.ex3.func.topdown;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.PrintStream;
import java.util.Scanner;

public class Exam {
	private int kor, eng, math;
	
	//get Score
	public void getKor(int score) {
		kor = score;
	}
	public void getEng(int score) {
		eng = score;
	}
	public void getMath(int score) {
		math = score;
	}
	
	//print Score
	public void printExam() {
		System.out.println("┌───────────────────────────────────┐");
		System.out.println("│              성적 출력              │");
		System.out.println("└───────────────────────────────────┘");
		
		System.out.printf(
				  "1. 국어 성적 : %2d\n"
				+ "2. 영어 성적 : %2d\n"
				+ "3. 수학 성적 : %2d\n\n",kor,eng,math);
	}
	
	//Input Score by Console input
	public void inputExam() {
		System.out.println("┌───────────────────────────────────┐");
		System.out.println("│              성적 입력              │");
		System.out.println("└───────────────────────────────────┘");
		Scanner scan = new Scanner(System.in);
		System.out.print("국어 성적을 입력하세요: ");
		kor = scan.nextInt();
		System.out.print("영어 성적을 입력하세요: ");
		eng = scan.nextInt();
		System.out.print("수학 성적을 입력하세요: ");
		math = scan.nextInt();
		
	}
	
	//Read Score from File
	public void readExam(String filePath) throws IOException {
		File srcFile = new File(filePath);
		FileInputStream srcFis = new FileInputStream(srcFile);
		Scanner fscan = new Scanner(srcFis);
		
		kor = Integer.parseInt(fscan.next());
		eng = Integer.parseInt(fscan.next());
		math = Integer.parseInt(fscan.next());
		
		fscan.close();
		srcFis.close();
	}
	
	public void save(String filePath) throws IOException {
		File outFile = new File(filePath);
		FileOutputStream outFos = new FileOutputStream(outFile);
		PrintStream fout = new PrintStream(outFos);
		
		fout.printf("%d %d %d",kor,eng,math);
		
		fout.close();
		outFos.close();
		
	}
	
	
	
	
}
