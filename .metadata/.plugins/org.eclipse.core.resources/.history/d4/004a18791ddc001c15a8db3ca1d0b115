package part2.ex3.func.topdown;

import java.io.File;
import java.io.FileInputStream;
import java.util.Scanner;

public class Exam {
	private int kor, eng, math;
	
	//get Score
	public void getKor(int score) {
		kor = score;
	}
	public void getEng(int score) {
		eng = score;
	}
	public void getMath(int score) {
		math = score;
	}
	
	//print Score
	public void printExam() {
		System.out.printf(
				  "          --------------\n"
				+ "			     성적 출력 \n"
				+ "			 --------------\n"
				+ "			   1. 국어 성적 : %2d\n"
				+ "			   2. 영어 성적 : %2d\n"
				+ "			   3. 수학 성적 : %2d\n",kor,eng,math);
	}
	
	//Input Score by Console input
	public void InputExam() {
		Scanner scan = new Scanner(System.in);
		System.out.print("국어 성적을 입력하세요: ");
		kor = scan.nextInt();
		System.out.print("영어 성적을 입력하세요: ");
		eng = scan.nextInt();
		System.out.print("수학 성적을 입력하세요: ");
		math = scan.nextInt();
		
		scan.close();
	}
	
	//Read Score from File
	public void readExam(String filePath) {
		File srcFile = new File(filePath);
		FileInputStream srcFis = new FileInputStream(srcFile);
		Scanner fscan = new Scanner(srcFis);
		
		while(fscan.hasNextInt()) {
			
		}
	}
	
	
}
