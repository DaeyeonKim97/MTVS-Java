package part2.ex3.func.topdown;

public class Program {

	public static void main(String[] args) {
		// 사용자로부터 성적(국어, 영어, 수학)을 입력 받거나 그것을 계산해서 출력해주고
		// 때로는 영구저장을 할 수 있도록 파일로 저장 또는 읽어오는 프로그램
		
		Exam exam;
			
		while() {
			int menu = inputMenu();
			
			/*
			 --------------
			     메인 메뉴
			 --------------
			 1. 성적 입력
			 2. 성적 출력
			 3. 성적 읽어오기
			 4. 성적 저장
			 5. 종료
			 */
			
			switch(menu) {
			case 1:
				exam = inputExam();
				break;
			case 2:
				print
				break;
			case 3:
				break;
			case 4:
				break;
			case 5:
				break;
			default:
				break;
			}
			
		}
		

	}

}
