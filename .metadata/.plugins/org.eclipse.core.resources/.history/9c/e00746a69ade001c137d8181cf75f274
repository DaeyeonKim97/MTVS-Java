package part3.ex5.abst;

import java.util.Scanner;

public class NewlecExamConsole extends ExamConsole {
	public NewlecExamConsole() {
		
	}
	
	public NewlecExamConsole(Exam exam) {
		super(exam);
	}
	public NewlecExamConsole(NewlecExam exam) {
		super(exam);
	}
	
	
	public void input() {
		super.input();
		Scanner scan = new Scanner(System.in);
		System.out.print("컴퓨터 성적을 입력하세요: ");
		int com = scan.nextInt();
		NewlecExam exam = (NewlecExam) this.getExam();
		exam.setCom(com);
	}
	
	public void print() {
		super.print();
		System.out.printf("4. 컴퓨터 성적 : %2d\n",((NewlecExam)this.getExam()).getCom());
	}

	
}
